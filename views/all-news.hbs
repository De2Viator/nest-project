<section>
    <ul class="col-12 d-flex justify-content-around flex-wrap list-inline">
        {{#each news}}
            <li class="col-lg-3 mb-3">
                <div class="card" style="max-width: 250px;">
                    <img class="card-img-top" src={{this.cover}} alt={{this.title}}>
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <a href="http://localhost:3000/news/{{this.id}}/details" class="btn btn-primary">Detail</a>
                    </div>
                </div>
            </li>
        {{/each}}
    </ul>
</section>